# FDDB Prometheus Exporter Configuration
# Copy this file to .env and fill in your actual credentials

# FDDB Credentials (required)
FDDB_USERNAME=your@email.com
FDDB_PASSWORD=your_password_here

# Exporter Configuration (optional)
EXPORTER_PORT=8000
SCRAPE_INTERVAL=300

# Date Configuration (optional)
# 0=today, -1=yesterday, 1=tomorrow
FDDB_DATE_OFFSET=0

# Debug Mode (optional)
# DEBUG_OUTPUT_DIR=.local/debug

# Advanced (optional)
# FDDB_USE_TEST_DATA=false
# FDDB_SKIP_LOGIN_ERRORS=false
